FROM jenkins/jenkins:lts

# Install Git, mailutils, Node.js, and npm
USER root
RUN apt-get update && \
    apt-get install -y git mailutils curl && \
    curl -sL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs && \
    npm install -g npm && \
    apt-get clean

# Return to the Jenkins user
USER jenkins

# Expose the Jenkins port
EXPOSE 8080
