{
  "name": "calculadora-jest",
  "version": "1.0.0",
  "description": "Projeto de calculadora com testes unit√°rios usando Jest",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "test": "jest",
    "clean": "rm -rf dist && rm -rf node_modules/.cache && rm -rf build"
  },
  "keywords": [
    "electron",
    "calculator",
    "jest",
    "unit-tests"
  ],
  "author": "Humberto Gomes F S",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "dependencies": {
    "calculadora-jest": "file:",
    "prompt-sync": "^4.2.0"
  },
  "build": {
    "asar": true,
    "appId": "calculadora-jest",
    "productName": "Calculadora Jest",
    "files": [
      "**/*",
      "!jenkins_home/**/*",
      "!tests",
      "!tests/**/*",
      "!README.md"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  }
}
