{
  "name": "calculadora-jest",
  "version": "1.0.0",
  "description": "Projeto de calculadora com testes unit√°rios usando Jest",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build-package": "electron-packager . MyApp --platform=win32 --arch=x64 --out=dist/ --electron-version=23.1.0 --ignore='(jenkins_home|docker|nginx|scripts|test-results|logs|fluentd|tests)'",
    "test": "jest",
    "clean": "rm -rf dist && rm -rf node_modules/.cache && rm -rf build"
  },
  "keywords": [
    "electron",
    "calculator",
    "jest",
    "unit-tests"
  ],
  "author": "Humberto Gomes F S",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "dependencies": {
    "calculadora-jest": "file:",
    "prompt-sync": "^4.2.0"
  },
  "build": {
    "asar": false,
    "appId": "calculadora-jest",
    "productName": "Calculadora Jest",
    "files": [
      "src/*",
      "index.html",
      "main.js",
      "calculatorCLI.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  }
}
